{
  "name": "app-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start-dev": "ts-node-dev -r tsconfig-paths/register index.ts",
    "test:u:dev": "make prepare_test_env && make run_unit_tests",
    "test:i:dev": "make prepare_test_env && make run_integration_tests",
    "test:a:dev": "make prepare_test_env && make run_acceptance_tests",
    "test:u": "jest --config jest.config.ts --runInBand --passWithNoTests --forceExit",
    "test:i": "jest --config jest.i.config.ts --runInBand --passWithNoTests --forceExit",
    "test:a": "jest --config jest.a.config.ts --runInBand --no-cache --passWithNoTests --forceExit",
    "test:all": "yarn test:u && yarn test:i && yarn test:a",
    "test:all:dev": "make prepare_test_env && make run_all_tests",
    "lint": "eslint --ext=ts,tsx .",
    "lint:diff": "git diff --name-only --diff-filter=ACMRTUXB origin/main -- . | grep -E \"(.ts$|.tsx$)\" | cut -d'/' -f3- | xargs -t -r eslint --ext=ts,tsx"
  },
