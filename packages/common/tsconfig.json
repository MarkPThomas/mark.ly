{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext", "es5", "es6", "es7", "es2015", "es2017", "dom", "ES2017.Object", "ESNext.AsyncIterable"],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "typeRoots": [
      "./typings/",
      "./node_modules/@types"
    ]
  },
  "include": [ "**/*.ts" ],
  "exclude": [
    "dist",
    "node_modules"
    // "**/*.spec.ts",
    // "**/*.ispec.ts",
    // "**/*.test.ts",
    // "**/*specs.ts"
  ]
}