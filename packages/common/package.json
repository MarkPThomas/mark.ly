{
  "name": "common",
  "version": "1.0.0",
  "description": "Files and data shared among multiple packages in the shared project",
  "author": "Mark P Thomas",
  "license": "ISC",
  "scripts": {
    "build": "tsc --skipLibCheck --allowJs",
    "build:dev": "webpack --config webpack.config.js --node-env development",
    "build:prod": "webpack --config webpack.config.js --node-env production",
    "typeorm": "cross-env POSTGRES_SCHEMA=public node --require ts-node/register --require dotenv/config ./node_modules/typeorm/cli -f db/ormconfig.ts",
    "aurora:typeorm": "node --require ts-node/register ./node_modules/typeorm/cli -f aurora-db/ormconfig.ts",
    "pretest": "echo pretest script is running... && npm run build",
    "test": "cross-env NODE_ENV=test && jest --coverage --testResultsProcessor=jest-sonar-reporter",
    "test:u": "cross-env NODE_ENV=test node --expose-gc ./node_modules/.bin/jest --config jest.config.ts --runInBand --forceExit",
    "test:i": "node --expose-gc ./node_modules/.bin/jest --config jest.i.config.ts --runInBand --forceExit --testTimeout=7000",
    "test:i:dev": "make run_integration_tests",
    "test:all": "yarn test:u && yarn test:i:dev",
    "test:results": "open-cli ./testResults/coverage/lcov-report/index.html",
    "posttest": "echo posttest script is running... && npm-run-all clear test:results",
    "lint": "eslint --ext=ts,tsx .",
    "lint:diff": "git diff --name-only --diff-filter=ACMRTUXB origin/main -- . | grep -E \"(.ts$|.tsx$)\" | cut -d'/' -f3- | xargs -t -r eslint --ext=ts,tsx",
    "clear": "rimraf dist"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "access-log": "^0.4.1",
    "axios": "^1.6.0",
    "bunyan": "^1.8.15",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "koa": "^2.14.2",
    "mongodb": "^4.17.0",
    "reflect-metadata": "^0.1.13",
    "sql-template-strings": "^2.2.2",
    "typeorm": "^0.3.14"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^5.1.1",
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.2",
    "@types/jest-json-schema": "^6.1.1",
    "@types/koa": "^2.13.6",
    "@types/node": "^18.0.0",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/parser": "^5.30.5",
    "chai": "^4.3.6",
    "community-faker": "^5.5.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "jest-json-schema": "^6.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "node-polyfill-webpack-plugin": "^2.0.0",
    "sinon": "^15.1.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
