{
  "name": "common",
  "version": "1.0.0",
  "description": "Files and data shared among multiple packages in the shared project",
  "author": "Mark P Thomas",
  "license": "ISC",
  "scripts": {
    "build": "tsc --skipLibCheck --allowJs",
    "typeorm": "cross-env POSTGRES_SCHEMA=public node --require ts-node/register --require dotenv/config ./node_modules/typeorm/cli -f db/ormconfig.ts",
    "aurora:typeorm": "node --require ts-node/register ./node_modules/typeorm/cli -f aurora-db/ormconfig.ts",
    "test:u": "cross-env NODE_ENV=testing node --expose-gc ./node_modules/.bin/jest --config jest.config.ts --runInBand --forceExit",
    "test:i": "node --expose-gc ./node_modules/.bin/jest --config jest.i.config.ts --runInBand --forceExit --testTimeout=7000",
    "test:i:dev": "make run_integration_tests",
    "test:all": "yarn test:u && yarn test:i:dev",
    "lint": "eslint --ext=ts,tsx .",
    "lint:diff": "git diff --name-only --diff-filter=ACMRTUXB origin/main -- . | grep -E \"(.ts$|.tsx$)\" | cut -d'/' -f3- | xargs -t -r eslint --ext=ts,tsx"
  },
  "dependencies": {
    "access-log": "^0.4.1",
    "axios": "^0.27.2",
    "bunyan": "^1.8.15",
    "koa": "^2.14.2",
    "reflect-metadata": "^0.1.13",
    "sql-template-strings": "^2.2.2",
    "typeorm": "^0.3.14",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^5.1.1",
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.1",
    "@types/jest": "^28.1.2",
    "@types/jest-json-schema": "^6.1.1",
    "@types/koa": "^2.13.6",
    "@types/node": "^18.0.0",
    "@types/sinon": "^10.0.15",
    "chai": "^4.3.6",
    "community-faker": "^5.5.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "jest": "^28.1.1",
    "jest-json-schema": "^6.1.0",
    "sinon": "^15.1.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1"
  }
}