{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es6",
    // "module": "Node16",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "allowJs": false,
    // "skipLibCheck": true,
    // "preserveSymlinks": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2021",
      "scripthost"
    ],
    "paths": {
      // "common/*": [
      //   "../../libraries/common/*"
      // ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "ui",
    "server"
  ]
}