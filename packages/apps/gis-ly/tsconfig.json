{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es6",
    // "module": "Node16",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "allowJs": false,
    // "skipLibCheck": true,
    // "preserveSymlinks": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2021",
      "scripthost"
    ],
    // "rootDir": "./",
    "outDir": "dist",
    "typeRoots": [
      "./typings/",
      "./node_modules/@types"
    ],
    "paths": {
      // "common/*": [
      //   "../../libraries/common/*"
      // ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "ui",
    "server",
    "project.config.ts",
    "**/config.json",
    "**/gpsRaw/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "webpack",
    "jest",
    "coverage"
  ]
}