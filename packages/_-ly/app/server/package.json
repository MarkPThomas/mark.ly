{
  "name": "weather-ly-server",
  "version": "1.0.0",
  "description": "Server running the weather.ly app",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext=jsx,ts,tsx src",
    "start": "ts-node -r tsconfig-paths/register --project tsconfig.json index.ts",
    "test": "npm run test:u & npm run test:i & npm run test:a",
    "test:u": "jest --config jest.config.json",
    "test:i": "jest --config jest.config.i.json --passWithNoTests",
    "test:a": "jest --config jest.config.a.json --passWithNoTests"
  },
  "author": "Mark P Thomas <markporterthomas@gmail.com> (https://github.com/MarkPThomas)",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "chai": "^4.3.6",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
}
