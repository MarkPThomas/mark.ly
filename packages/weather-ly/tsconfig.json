{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext", // Look into this addition vs. commonJs
    "allowSyntheticDefaultImports": true, // Look into this addition
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es2021",
      "scripthost"
    ],
    "jsx": "react-jsx",
    "allowJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "common/*": [
        "../../../common/*"
      ],
      "server/*": [
        "../../server/*"
      ]
    },
    "preserveSymlinks": true,
    "resolveJsonModule": true
  },
  "include": [
    "ui",
    "server",
    "../common/utils"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/setupProxy.ts",
    "src/bundle-analyze.js",
    "server",
    "coverage"
  ],
}