{
  "extends": "../../../tsconfig.root.strict.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "./typings/",
      "./node_modules/@types"
    ]
  },
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../math"
    },
  ],
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "bin",
    "webpack",
    "jest",
    "coverage",
    "**/*.*spec.ts"
  ]
}